<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/my_request_imageview"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/borobudur"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/all_request_country_name"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:text="Indonesia "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="end"
                    android:layout_centerVertical="true"
                    android:id="@+id/all_request_username"
                    android:textSize="12dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/colorBlack"
                    android:text="Ibnu Muzzakkir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:id="@+id/all_request_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Macbook Pro 2016"
                android:textColor="@color/colorBlack"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/all_request_budget"
                android:textSize="12dp"
                android:paddingLeft="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorBlack"
                android:text="Rp. 200.0000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>