<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/all_countries_frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content"

    android:layout_width="match_parent">
    <ImageView
        android:id="@+id/all_countries_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/borobudur"
        android:background="@color/colorBlack"/>
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/all_countries_title"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indonesia"/>
        <TextView
            android:id="@+id/all_countries_request_count"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumlah Permintaan : 48"/>
        <TextView
            android:id="@+id/all_countries_diaspora_count"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumlah Diaspora : 48"/>
    </LinearLayout>
</RelativeLayout>