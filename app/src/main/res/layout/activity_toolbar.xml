<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/com_scoproject_ss_view_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    local:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    <RelativeLayout
        android:id="@+id/com_scoproject_ss_relative_default_bar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-16dp"
            android:id="@+id/toolbar_arrow_left"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_left_white_24dp"/>
        <TextView
            android:layout_toRightOf="@+id/toolbar_arrow_left"
            android:text="Negara"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginRight="60dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>